{
  "name": "luxury-rides-server",
  "version": "1.0.0",
  "description": "Luxury Rides backend server with Express and JSON Server",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:api": "json-server --watch db.json --port 3000",
    "start:mpesa": "nodemon --ignore db.json server.js",
    "dev": "concurrently \"npm run start:api\" \"npm run start:mpesa\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.0",
    "express": "^5.1.0",
    "moment": "^2.30.1",
    "json-server": "^0.17.4"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "concurrently": "^8.2.0"
  }
}
